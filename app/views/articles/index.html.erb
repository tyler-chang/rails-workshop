
<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %> | <%= link_to 'Edit', edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>
<p><%= link_to 'New article', new_article_path %></p>